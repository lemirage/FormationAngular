<!doctype html>
<html ng-app="ingoApp" lang="fr">
<head>
  <title> Formation Angular</title>
  <meta charset="utf-8">
  <link rel="stylesheet" href="css/normalize.css" media="screen" title="no title" charset="utf-8">
  <link rel="stylesheet" href="css/skeleton.css"  media="screen" title="no title" charset="utf-8">
  <link rel="stylesheet" href="css/style.css"  media="screen" title="no title" charset="utf-8">
</head>
<body>
  <div class="container">
      <h1>Petit Projet</h1>
      <section ng-controller="mainCtrl">
        <section class="filters" id="filters">
              <input type="search" name="search" ng-model="search" placeholder="Type your search >>">
              <select class="" name="">
                <option></option>
                <option></option>
                <option></option>
                <option></option>
              </select>
        </section>

        <!-- HEADER du tableau -->
          <div class="row header">
              <div class="two columns">
              Name EN
              </div>
              <div class="two columns">
              Name FR
              </div>
              <div class="two columns">
              Address
              </div>
              <div class="two columns">
                Contact
              </div>
              <div class="four columns">
                Official  representative
              </div>
          </div>
        <!-- Fin header-->
        <div class="row" ng-repeat="ingo in ingos | filter:search">
            <div class="two columns">
              {{ingo.nameEn}} ({{ingo.acronymEn}})
            </div>
            <div class="two columns">
              {{ingo.nameFr}} ({{ingo.acronymFr}})
            </div>
            <div class="two columns">
              {{ingo.street}} {{ingo.postcode}} {{ingo.town}} {{ingo.country}}
            </div>
            <div class="two columns">
              {{ingo.tel}} <br />
              {{ingo.fax}} <br />
              {{ingo.email}} <br />
              {{ingo.website}}
            </div>
            <div class="four columns">
              {{ingo.presidentFirstname}}
              {{ingo.presidentLastname}}
            </div>

        </div>

      </section>
</div>
  <!--Start Scripts-->
    <script src="js/angular.min.js" ></script>
    <script src="js/app.js" ></script>
    <script src="js/controllers/mainCtrl.js" ></script>
    <script src="js/jquery-3.0.0.min.js" ></script>
  <!--End Scripts-->
</body>
</html>
